{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build_runner: build",
      "type": "dart",
      "command": "dart",
      "args": [
        "run",
        "build_runner",
        "build",
        "--delete-conflicting-outputs",
      ],
      "problemMatcher": [
        "$dart-build_runner"
      ],
      "group": "build",
      "isBackground": true,
    },
    {
      "label": "build_runner: watch",
      "type": "dart",
      "command": "dart",
      "args": [
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs",
      ],
      "problemMatcher": [
        "$dart-build_runner"
      ],
      "group": "build",
      "isBackground": true,
      "runOptions": {
        "runOn": "folderOpen",
        "instanceLimit": 1,
        "reevaluateOnRerun": true
      }
    },
    {
      "label": "dart: fix",
      "type": "dart",
      "command": "dart",
      "args": [
        "fix"
      ],
      "problemMatcher": [],
      "group": "none",
      "isBackground": true
    },
    {
      "label": "generate api",
      "type": "shell",
      "command": "openapi-generator-cli generate -c .openapi-generator-config.yaml",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "generate api client",
      "type": "shell",
      "command": "./generate.sh",
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "windows": {
        "command": "git-bash.exe",
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true,
        "close": true
      }
    }
  ]
}
